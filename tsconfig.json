{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["test/*"],
      "@resource/*": ["resource/*"]
    },
    "target": "ES5",
    "lib": ["ES2019", "DOM"],
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
